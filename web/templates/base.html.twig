        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
{#            {% block importmap %}{{ importmap('app') }}{% endblock %}#}
        {% endblock %}
    </head>
    <body>
        {% include 'web/layout/header.html.twig' %}
        <div class="wrapper">
            {% block body %}{% endblock %}
        </div>
        {% include 'web/layout/footer.html.twig' %}
    </body>
</html>
